div(Id="levelOneDiv" ng-controller='levelOneController')
        
  .content-area
    h2 {{currentItem.Id}} Overview
    .info-wrapper
      .primary-info
        .descripton-wrapper
          div.primary-image
          p {{currentItem.Description}}
        .section-nav
          h3 In this section
          .section-flex-container
            .section-flex-item(ng-repeat="item in sectionItems")
              .section-item-header(ng-click="ctrl.redirectToL2Nav(item)") {{item.Name}}
              .section-item-description {{item.Description}}
      .secondary-info
        div.news-item-wrapper
          h3 NEWS
          div(ng-repeat="news in relatedNews")
            span {{news.Name}}
            p.text-muted {{news.Metadata.CreatedOn}}
            
          h3 Apps
          div(ng-repeat="app in relatedApps")
            span {{app.Name}}
            br
        
script(src='js/app/levelOne/dataService.js')
script(src='js/app/levelOne/controller.js')
script(src='js/app/levelOne/main.js')
script.
  angular.bootstrap(document.getElementById('levelOneDiv'),["levelOneApp"])
